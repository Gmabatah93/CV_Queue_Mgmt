# PREMISE Computer Vision Platform Configuration
# Copy this file to .env and update values as needed

# Video Processing Configuration
VIDEO_PATH=videos/bank_sample.MOV
VIDEO_PROCESSING_FPS=30
VIDEO_BUFFER_SIZE=100

# YOLO Model Configuration
MODEL_NAME=yolo11n.pt
MODEL_CONFIDENCE_THRESHOLD=0.5
MODEL_IOU_THRESHOLD=0.5
TRACKING_PERSISTENCE=true

# Zone Configuration
# Line zone coordinates as comma-separated x,y pairs
LINE_ZONE_POINTS=400,300,600,300,650,500,350,500
# Teller zone coordinates
TELLER_ZONE_POINTS=300,100,500,100,500,200,300,200
# Zone dwell time threshold in seconds for teller interaction detection
TELLER_DWELL_TIME_THRESHOLD=10

# Data Storage Configuration
OUTPUT_CSV_DIR=data/csv_exports
LOG_DIR=data/logs
PROCESSED_VIDEO_DIR=data/processed

# CSV Export Settings
CSV_TIMESTAMP_FORMAT=%Y-%m-%d %H:%M:%S.%f
CSV_EXPORT_BATCH_SIZE=1000

# Dashboard Configuration
DASHBOARD_HOST=localhost
DASHBOARD_PORT=8501
DASHBOARD_UPDATE_INTERVAL=5
DASHBOARD_CACHE_TTL=60

# Security & Privacy Settings
ENABLE_FACE_RECOGNITION=false
ANONYMIZE_DATA=true
DATA_RETENTION_DAYS=30
LOG_LEVEL=INFO

# Performance Settings
GPU_ENABLED=true
BATCH_PROCESSING=false
MAX_CONCURRENT_STREAMS=4
MEMORY_OPTIMIZATION=true

# Alert Thresholds
QUEUE_LENGTH_ALERT_THRESHOLD=5
WAIT_TIME_ALERT_THRESHOLD=300
ABANDONMENT_RATE_ALERT_THRESHOLD=20

# Integration Settings
ENABLE_EMAIL_ALERTS=false
EMAIL_SMTP_SERVER=
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=
EMAIL_PASSWORD=
ALERT_RECIPIENTS=

# Database Configuration (if using database instead of CSV)
DATABASE_URL=
DATABASE_CONNECTION_POOL_SIZE=10

# Cloud Configuration (if using cloud storage)
CLOUD_STORAGE_ENABLED=false
CLOUD_STORAGE_BUCKET=
CLOUD_STORAGE_REGION=
CLOUD_ACCESS_KEY=
CLOUD_SECRET_KEY=

# Development Settings
DEBUG_MODE=false
ENABLE_PROFILING=false
SAVE_DEBUG_FRAMES=false
DEBUG_FRAME_INTERVAL=30

# API Configuration (for future integrations)
API_ENABLED=false
API_HOST=localhost
API_PORT=8000
API_WORKERS=4
API_SECRET_KEY=your-secret-key-here

# Monitoring & Logging
ENABLE_PERFORMANCE_MONITORING=true
LOG_ROTATION_SIZE=10MB
LOG_RETENTION_COUNT=5
METRICS_EXPORT_INTERVAL=60